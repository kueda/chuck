{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Chuck",
  "version": "0.1.3",
  "identifier": "net.kueda.chuck",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Chuck",
        "width": 1024,
        "height": 680
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' tiles: http://tiles.localhost basemap: http://basemap.localhost",
        "img-src": "'self' data: blob: tiles: asset: *",
        "connect-src": "'self' tiles: http://tiles.localhost basemap: http://basemap.localhost ipc: http://ipc.localhost https://tile.openstreetmap.org:* https://protomaps.github.io https://build.protomaps.com",
        "object-src": "'none'",
        "frame-src": "'self'",
        "worker-src": "blob:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPLOCALDATA/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
